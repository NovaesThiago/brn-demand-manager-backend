generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Provider {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  contact     String?  // ADICIONAR (opcional)
  responsible String?  // ADICIONAR (opcional)
  createdAt   DateTime @default(now())
  demands     Demand[]
}

model Demand {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  providerId  Int
  createdAt   DateTime @default(now())
  actions     Action[]
  provider    Provider @relation(fields: [providerId], references: [id])
}

model Action {
  id        Int      @id @default(autoincrement())
  label     String
  done      Boolean  @default(false)
  demandId  Int
  createdAt DateTime @default(now())
  demand    Demand   @relation(fields: [demandId], references: [id])
}
